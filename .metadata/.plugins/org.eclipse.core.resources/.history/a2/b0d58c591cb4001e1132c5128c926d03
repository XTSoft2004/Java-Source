import java.util.Iterator;

public class vidu3 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		int[] a = {3,2,6,2,5};
		for(int i = 0;i < a.length;i++) {
			System.out.print(a[i] + " ");
		}
		System.out.println("");
		int cmax = 0;
		for(int i : a) {
			if(cmax < i) {
				i = cmax;
			}
		}
		System.out.println("So lon nhat: " + cmax);
	}

}
